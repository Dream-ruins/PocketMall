.goods-list .first-tab .goods-item {
  display: flex;
  min-height: 180rpx;
  border-bottom: 2rpx solid #ddd;
}

.goods-list .first-tab .goods-item .goods-img-warp {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.goods-list .first-tab .goods-item .goods-img-warp .goods-img {
  width: 70%;
}

.goods-list .first-tab .goods-item .goods-info-warp {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.goods-list .first-tab .goods-item .goods-info-warp .goods-info {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
}

.goods-list .first-tab .goods-item .goods-info-warp .goods-price {
  color: #cc1010;
  font-size: 36rpx;
}
