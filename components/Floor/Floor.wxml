<!-- components/Floor/Floor.wxml -->
<view class="floor-box">
  <view class="floor-group" wx:for="{{floorData}}" wx:key="index" wx:for-item="group" wx:for-index="groupIndex">
    <!-- 标题 -->
    <view class="floor-title">
      <image src="{{group.floor_title.image_src}}" name="{{group.floor_title.name}}" mode="widthFix"></image>
    </view>
    <!-- 内容 -->
    <view class="floor-list">
      <navigator wx:for="{{group.product_list}}" wx:key="name" wx:for-item="list" wx:for-index="listIndex">
        <image src="{{list.image_src}}" name="{{list.name}}" mode="{{listIndex===0?'widthFix':'scaleToFill'}}"></image>
      </navigator>
    </view>
  </view>
</view>